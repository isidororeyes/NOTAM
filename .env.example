# ============================================================================
# Ejemplo de Variables de Entorno para NOTAM System
# ============================================================================
# Copia este archivo a .env y configura tus valores

# Configuración de la aplicación
APP_NAME=NOTAM System
APP_VERSION=2.0.0
APP_ENV=development
DEBUG=true

# Base de datos
DB_TYPE=sqlite
DB_PATH=./data/notam.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=notam_db
DB_USER=notam_user
DB_PASSWORD=secure_password

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=./logs/notam.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=true
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Claves API externas
ICAO_API_KEY=your-icao-api-key
FAA_API_KEY=your-faa-api-key
EUROCONTROL_API_KEY=your-eurocontrol-api-key

# Configuración de email
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Configuración de Redis (cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=